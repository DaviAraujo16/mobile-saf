<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agenda.CadastroActivity"
    android:orientation="vertical"
    android:layout_margin="24dp">

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nome_contato"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="text"
        android:layout_margin="2dp"
        />
    <EditText
        android:id="@+id/txt_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/endereco_contato"
        android:inputType="text"
        android:layout_margin="2dp"
        />
    <EditText
        android:id="@+id/txt_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/telefone_contato"
        android:inputType="phone"
        android:layout_margin="2dp"
        />
    <EditText
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_contato"
        android:inputType="textEmailAddress"
        android:layout_margin="2dp"
        />
    <EditText
        android:id="@+id/txt_linkedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/linkedin_contato"
        android:inputType="text"
        android:layout_margin="2dp"
        />


</LinearLayout>